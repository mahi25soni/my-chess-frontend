{
  "name": "my-chess-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run lint && next dev",
    "build": "npm run check && next build",
    "start": "next start",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --write src",
    "prettier:check": "prettier --check src",
    "check": "npm run lint:check && npm run prettier:check",
    "format": "npm run lint:check && npm run prettier",
    "clean": "rm -rf .next node_modules && npm cache clean --force",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git diff --name-only | xargs git add"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "gitignore": "^0.7.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.14",
    "typescript": "^5"
  }
}
